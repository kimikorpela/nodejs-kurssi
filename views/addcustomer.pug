doctype html
html
  head
    title Add customer
    link(rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous")
  body
    h1 New customer
    form(action='/addcustomer', method='POST').container
      div.mb-3
        label(for="firstname").form-label Firstname
        input(type="text", name="firstname").form-control
      div.mb-3
        label(for="lastname").form-label Lastname
        input(type="text", name="lastname").form-control
      div.mb-3
        label(for="email").form-label Email
        input(type="text", name="email").form-control
      div.mb-3
        label(for="phone").form-label Phone
        input(type="text", name="phone").form-control
      div.mb-3
        input(type="submit", value="Send").btn.btn-primary